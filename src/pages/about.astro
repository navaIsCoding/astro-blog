    </Tile>

    <Tile href="#" variant="floating">
        <TileContent>
        <TileTitle>Devsoc Trainee</TileTitle>
        <TileDescription>Soon</TileDescription>
        </TileContent>
    </Tile>

    <Tile href="#" variant="floating">
        <TileContent>
        <TileTitle>Social Media Manager</TileTitle>
        <TileDescription>Soon</TileDescription>
        </TileContent>
    </Tile>

